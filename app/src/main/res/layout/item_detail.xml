<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar_item_detail"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:background="@color/white"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>


    <ImageView
        android:id="@+id/item_detail_back"
        android:layout_width="19dp"
        android:layout_height="19dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="40dp"
        app:srcCompat="@drawable/stage_back"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:clickable="true"
        android:onClick="onBackClicked"/>

    <ImageView
        android:id="@+id/item_scrap_no"
        android:layout_width="24dp"
        android:layout_height="32dp"
        android:layout_marginBottom="600dp"
        android:layout_marginLeft="280dp"
        app:layout_constraintStart_toEndOf="@+id/item_detail_back"
        app:layout_constraintTop_toTopOf="@+id/item_detail_back"
        app:srcCompat="@drawable/stage_scrap_no"
        android:clickable="true"
        android:focusable="true"
        android:onClick="toggleScrap"/>

    <TextView
        android:id="@+id/item_scrap"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="5dp"
        android:fontFamily="@font/pretendard_semibold"
        android:text="231"
        android:textColor="#A6A6A6"
        android:textSize="15sp"
        app:layout_constraintStart_toEndOf="@+id/item_scrap_no"
        app:layout_constraintTop_toTopOf="@+id/item_scrap_no" />

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@id/toolbar_item_detail"
        app:layout_constraintTop_toBottomOf="@id/toolbar_item_detail"
        app:layout_constraintVertical_bias="0.0">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="27dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="27dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/item_detail_team_image"
                    android:layout_width="56dp"
                    android:layout_height="56dp"
                    app:srcCompat="@drawable/team_image" />


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/item_detail_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="5dp"
                        android:fontFamily="@font/pretendard_semibold"
                        android:text="You little human"
                        android:textColor="@color/black"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/item_detail_category"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:fontFamily="@font/pretendard_semibold"
                        android:text="사진/영상"
                        android:textColor="#a6a6a6"
                        android:textSize="15sp" />


                </LinearLayout>

                //view count.

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="50dp"
                        android:layout_marginTop="8dp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/item_detail_general"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/pretendard_semibold"
                            android:text="viewer"
                            android:textColor="#a6a6a6"
                            android:textSize="15sp" />

                        <TextView
                            android:id="@+id/item_detail_general_view"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="5dp"
                            android:fontFamily="@font/pretendard_semibold"
                            android:text="523"
                            android:textColor="#a6a6a6"
                            android:textSize="15sp" />


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="45dp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/item_detail_recruiter"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/pretendard_semibold"
                            android:text="recruiter"
                            android:textColor="#a6a6a6"
                            android:textSize="15sp" />

                        <TextView
                            android:id="@+id/item_detail_recruiter_view"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="5dp"
                            android:fontFamily="@font/pretendard_semibold"
                            android:text="124"
                            android:textColor="#a6a6a6"
                            android:textSize="15sp" />

                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <androidx.viewpager2.widget.ViewPager2
                    android:id="@+id/viewPagerImages"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintDimensionRatio="H,1:1"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" /> <!-- 1:1 비율로 설정 -->

            </androidx.constraintlayout.widget.ConstraintLayout>


            <TextView
                android:id="@+id/item_detail_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:fontFamily="@font/pretendard_regular"
                android:text="Est adipiscing neque pretium natoque nibh a odio. Ut vel enim feugiat odio adipiscing sagittis. Lorem ac nisl eget at. Dolor eu a a massa. Auctor aenean sagittis viverra lectus eu nisl. Senectus amet metus ullamcorper semper in massa placerat facilisis adipiscing. Sagittis vitae ac facilisi fames et vel. Ornare vitae penatibus interdum tellus sed nulla at.
Gravida dolor in nibh elementum vulputate. Nullam lobortis nunc ornare montes morbi dignissim in ultrices turpis. Arcu etiam ipsum vivamus massa. Metus magnis est ut ultricies. Arcu hac vitae lacinia nam sed gravida. Tristique felis nunc justo senectus amet placerat. Ac vel libero dui ultrices arcu."
                android:textColor="@color/black"
                android:textSize="15sp" />

            //hashtag

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <com.google.android.flexbox.FlexboxLayout
                    android:id="@+id/flexbox_hashtags"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:padding="8dp"
                    app:alignItems="flex_start"
                    app:flexWrap="wrap"
                    app:justifyContent="flex_start"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">


                </com.google.android.flexbox.FlexboxLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>

            <TextView
                android:id="@+id/item_detail_member_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:fontFamily="@font/pretendard_bold"
                android:text="팀원 정보"
                android:textColor="@color/black"
                android:textSize="18sp" />

            //team info

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/item_detail_team_member"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:gravity="center_vertical"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/item_detail_member_image"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:clickable="true"
                        android:onClick="onMemberClicked"
                        android:padding="8dp"
                        android:src="@drawable/member_image" />

                    <TextView
                        android:id="@+id/item_detail_member_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:fontFamily="@font/pretendard_semibold"
                        android:text="김이름"
                        android:textColor="@color/black"
                        android:textSize="15dp" />

                    <TextView
                        android:id="@+id/item_detail_member_role"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:fontFamily="@font/pretendard_semibold"
                        android:text="기획/디렉팅"
                        android:textColor="#a6a6a6"
                        android:textSize="15dp" />

                </LinearLayout>
            </LinearLayout>

            <TextView
                android:id="@+id/item_detail_exhibition_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:fontFamily="@font/pretendard_bold"
                android:text="전시 정보"
                android:textColor="@color/black"
                android:textSize="18sp" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="0dp">

                <ImageView
                    android:id="@+id/item_detail_exhibition_box"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="80dp"
                    android:src="@drawable/exhibit_info_box"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/item_detail_exhibition_location"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="25dp"
                    android:layout_marginTop="28dp"
                    android:fontFamily="@font/pretendard_semibold"
                    android:text="서울여자대학교 조형예술관 B1"
                    android:textColor="@color/black"
                    android:textSize="15sp"
                    app:layout_constraintStart_toStartOf="@+id/item_detail_exhibition_box"
                    app:layout_constraintTop_toTopOf="@+id/item_detail_exhibition_box" />

                <TextView
                    android:id="@+id/item_detail_exhibition_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:fontFamily="@font/pretendard_regular"
                    android:text="2024.04.01~2024.04.08"
                    android:textColor="@color/black"
                    android:textSize="15sp"
                    app:layout_constraintStart_toStartOf="@id/item_detail_exhibition_location"
                    app:layout_constraintTop_toBottomOf="@id/item_detail_exhibition_location" />

                <TextView
                    android:id="@+id/item_detail_exhibition_time"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="20dp"
                    android:fontFamily="@font/pretendard_regular"
                    android:text="10:00~16:00"
                    android:textColor="@color/black"
                    android:textSize="15sp"
                    app:layout_constraintEnd_toEndOf="@id/item_detail_exhibition_box"
                    app:layout_constraintTop_toTopOf="@id/item_detail_exhibition_date" />
            </androidx.constraintlayout.widget.ConstraintLayout>


        </LinearLayout>


    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>