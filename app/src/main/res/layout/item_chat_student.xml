<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <!-- 말풍선 배경 -->

    <!-- 학생 이미지 -->

    <!-- 학생 이름 -->

    <!-- 학생 카테고리 -->

    <ImageView
        android:id="@+id/chat_message_text"
        android:layout_width="223dp"
        android:layout_height="86dp"
        android:layout_margin="8dp"
        android:background="@drawable/speech_bubble_answer"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <ImageView
        android:id="@+id/student_image"
        android:layout_width="41dp"
        android:layout_height="42dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="24dp"
        android:scaleType="centerCrop"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/team_image" />

    <TextView
        android:id="@+id/answer_text_student_name"
        android:layout_width="73dp"
        android:layout_height="17dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="4dp"
        android:fontFamily="@font/pretendard_bold"
        android:text="학생 이름"
        android:textColor="@color/black"
        android:textSize="13sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@id/student_image"
        app:layout_constraintTop_toTopOf="@id/student_image" />

    <TextView
        android:id="@+id/answer_text_student_category"
        android:layout_width="75dp"
        android:layout_height="14dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="4dp"
        android:fontFamily="@font/pretendard_medium"
        android:text="학생 카테고리"
        android:textColor="@color/black"
        android:textSize="11sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@id/student_image"
        app:layout_constraintTop_toBottomOf="@id/answer_text_student_name" />

</androidx.constraintlayout.widget.ConstraintLayout>
